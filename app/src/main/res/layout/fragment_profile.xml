<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".ui.view.fragment.auth.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_backProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="@string/profile"
            android:textColor="@color/font_color_dark"
            android:textSize="20sp" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/llBorderProfile"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/header_profile"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/ic_profile_bulet" />

        <TextView
            android:id="@+id/namaUkmProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:fontFamily="@font/plusjakartasans_bold"
            android:gravity="center"
            android:text="@string/organisasiExampleDesk"
            android:textColor="@color/font_color_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/emailUkmProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/plusjakartasans_regular"
            android:gravity="center"
            android:text="@string/organisasiExampleDesk"
            android:textColor="@color/font_color_dark"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/llBorderProfile"
        app:layout_constraintStart_toStartOf="@id/llBorderProfile"
        app:layout_constraintTop_toBottomOf="@id/llBorderProfile">


        <LinearLayout
            android:id="@+id/llEditProfile"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/header_profile"
            android:backgroundTint="@color/secondary_color_50"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/llBorderProfile"
            app:layout_constraintTop_toBottomOf="@id/llBorderProfile">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_edit_bulet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:gravity="center"
                android:text="Edit Profile"
                android:textColor="@color/font_color_dark"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLogoutProfile"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:background="@drawable/header_profile"
            android:backgroundTint="@color/danger_color_50"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/llBorderProfile"
            app:layout_constraintTop_toBottomOf="@id/llBorderProfile">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_logout_bulet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:gravity="center"
                android:text="Logout"
                android:textColor="@color/font_color_dark"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>