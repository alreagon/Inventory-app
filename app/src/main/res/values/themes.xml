<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkripsiehApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_60</item>
        <item name="colorPrimaryVariant">@color/primary_color_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color_60</item>
        <item name="colorSecondaryVariant">@color/secondary_color_50</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Transparent Status Bar. -->
        <item name="android:windowTranslucentStatus">
            false
        </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Nyimpen.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/putih</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_2</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <item name="android:windowTransitionBackgroundFadeDuration">700</item>
        <item name="postSplashScreenTheme">@style/Theme.SkripsiehApp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">6%</item>
    </style>


<!--    Dialog -->
    <style name="MyDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">75%</item>


        <item name="android:windowFrame">@null</item>
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutPrimary" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="boxStrokeColor">@color/font_color_dark</item>
        <item name="android:textColorHint">@color/font_color_dark</item>
        <item name="passwordToggleTint">@color/font_color_dark</item>

        <!--        style="?attr/textInputFilledStyle"-->
    </style>


